package frsf.cidisi.exercise.drone.search;

import logica.Locacion;
import frsf.cidisi.faia.exceptions.PrologConnectorException;
import frsf.cidisi.faia.simulator.SearchBasedAgentSimulator;

public class DroneAgentMain {

    public static void main(int estrategia,Locacion ciudad) throws PrologConnectorException {
        DroneAgent agent = new DroneAgent();
        agent.setEstrategia(new Integer(args[0]));

        DroneEnvironment environment = new DroneEnvironment();

        SearchBasedAgentSimulator simulator =
                new SearchBasedAgentSimulator(environment, agent);
        
        simulator.start();
    }

}
